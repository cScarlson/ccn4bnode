,"dependencies": { 	"nlogger": "0.3.x"
					,"js.js": ">=0.1.10"}
,"devDependencies": {
	"mocha": ">=0.11.0"
	,"chai": ">=1.0.1"
	,"sandboxed-module": ">=0.1.3"
	,"step": ">=0.0.5"
	,"nodeunit": ">=0.7.4"
	,"sinon": ">=1.3.4"
	,"jshint": ">=0.9.1"}
