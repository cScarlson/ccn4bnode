, "version" :         "0.2.5"
, "author" :          "David J. Kordsmeier <dkords@gmail.com>"
, "contributors" :  [ "Simba",
                      "Keiko",
					  "Creeper",
                      "Benny - RIP"]

, "repository" :    { "type" :  "git"
                    , "url" :   "http://github.com/truedat101/ccn4bnode.git" }
, "bugs" :          { "mail" :  "ccnx-users@ccnx.org"
                    , "web" :   "http://github.com/truedat101/ccn4bnode/issues" }
, "os" :            [ "linux"
                    , "darwin"
